{
  "name": "es6-library-boilerplate",
  "version": "1.0.0-alpha",
  "description": "Boilerplate for libraries using modern tools",
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "lib",
    "src",
    "dist",
    "es"
  ],
  "repository": "git@github.com:jamieparkinson/es6-library-boilerplate.git",
  "author": "Jamie Parkinson <jamie.y.parkinson@gmail.com>",
  "license": "MIT",
  "scripts": {
    "compile:commonjs": "better-npm-run compile:commonjs",
    "compile:umd": "better-npm-run compile:umd",
    "compile:es": "babel -d es/ src/",
    "compile": "npm run compile:commonjs && npm run compile:umd && npm run compile:es",
    "lint": "eslint src",
    "test": "jest",
    "prepublishOnly": "npm run test -- --bail && npm run lint && npm run compile"
  },
  "betterScripts": {
    "compile:commonjs": {
      "command": "babel -d lib/ src/",
      "env": {
        "NODE_ENV": "commonjs"
      }
    },
    "compile:umd": {
      "command": "mkdir dist/ && babel -o dist/$npm_package_name.js",
      "env": {
        "NODE_ENV": "umd"
      }
    }
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "better-npm-run": "^0.0.15",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "flow-bin": "^0.47.0",
    "jest": "^20.0.4"
  },
  "jest": {
    "roots": ["<rootDir/src/"]
  }
}
